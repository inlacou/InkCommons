<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal"
		android:padding="@dimen/general_all"
		android:orientation="vertical">
		<com.google.android.material.textfield.TextInputLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="Sticky 1">
			<com.inlacou.exinput.free.text.TextInput
				android:id="@+id/sticky_1"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"/>
		</com.google.android.material.textfield.TextInputLayout>
		<com.google.android.material.textfield.TextInputLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="Sticky 2">
			<com.inlacou.exinput.free.text.TextInput
				android:id="@+id/sticky_2"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"/>
		</com.google.android.material.textfield.TextInputLayout>
		<com.google.android.material.textfield.TextInputLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="Sticky 3">
			<com.inlacou.exinput.free.text.TextInput
				android:id="@+id/sticky_3"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"/>
		</com.google.android.material.textfield.TextInputLayout>
		<com.google.android.material.textfield.TextInputLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="Sticky 4">
			<com.inlacou.exinput.free.text.TextInput
				android:id="@+id/sticky_4"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"/>
		</com.google.android.material.textfield.TextInputLayout>
		<com.google.android.material.textfield.TextInputLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="Non sticky 1">
			<com.inlacou.exinput.free.text.TextInput
				android:id="@+id/non_sticky_1"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"/>
		</com.google.android.material.textfield.TextInputLayout>
		<com.google.android.material.textfield.TextInputLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="Non sticky 2">
			<com.inlacou.exinput.free.text.TextInput
				android:id="@+id/non_sticky_2"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"/>
		</com.google.android.material.textfield.TextInputLayout>
		<com.google.android.material.textfield.TextInputLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="Non sticky 3">
			<com.inlacou.exinput.free.text.TextInput
				android:id="@+id/non_sticky_3"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"/>
		</com.google.android.material.textfield.TextInputLayout>
		<com.google.android.material.textfield.TextInputLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="Non sticky 4">
			<com.inlacou.exinput.free.text.TextInput
				android:id="@+id/non_sticky_4"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"/>
		</com.google.android.material.textfield.TextInputLayout>
		<Button
			android:id="@+id/btn_populate"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Auto populate"/>
		<Button
			android:id="@+id/btn_next"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Next screen"/>
	</LinearLayout>
</ScrollView>
