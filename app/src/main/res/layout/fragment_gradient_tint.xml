<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="center_horizontal">
	<LinearLayout
		android:id="@+id/lv"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingVertical="@dimen/inkbetterandroidviews_general_all"
		android:paddingHorizontal="@dimen/inkbetterandroidviews_general_all_double"
		android:orientation="vertical"
		android:gravity="center">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/general_all"
			android:orientation="horizontal">
			<LinearLayout
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:orientation="vertical">
				<com.github.koston.preference.view.ColorPicker
					android:id="@+id/color_picker1"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_gravity="center"/>
				<com.github.koston.preference.view.SaturationValueBar
					android:id="@+id/saturation_bar1"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					app:barType="saturation"/>
				<com.github.koston.preference.view.SaturationValueBar
					android:id="@+id/value_bar1"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					app:barType="value" />
			</LinearLayout>
			<LinearLayout
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:orientation="vertical">
				<com.github.koston.preference.view.ColorPicker
					android:id="@+id/color_picker2"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_gravity="center"/>
				<com.github.koston.preference.view.SaturationValueBar
					android:id="@+id/saturation_bar2"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					app:barType="saturation"/>
				<com.github.koston.preference.view.SaturationValueBar
					android:id="@+id/value_bar2"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					app:barType="value" />
			</LinearLayout>
		</LinearLayout>
		<com.inlacou.inkbetterandroidviews.spinners.BetterSpinner
			android:id="@+id/be_options"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/general_all"/>
		<ImageView
			android:id="@+id/iv1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/general_all"
			android:src="@drawable/space_invader"/>
		<ImageView
			android:id="@+id/iv2"
			android:layout_width="80dp"
			android:layout_height="80dp"
			android:layout_marginBottom="@dimen/general_all"
			android:src="@drawable/circle"/>
	</LinearLayout>
</RelativeLayout>
